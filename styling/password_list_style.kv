#:import rgba kivy.utils.get_color_from_hex

<PasswordListScreen>:
    password_list_layout: password_list_layout

    canvas.before:
        Color:
            rgba: rgba("#E3F2FD")  # Light blue background
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        Label:
            text: "Stored Passwords"
            font_size: 26
            color: rgba("#0D47A1")  # Dark blue title
            bold: True
            size_hint_y: None
            height: dp(60)

        ScrollView:
            BoxLayout:
                id: password_list_layout
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)

        Button:
            text: "Add New Password"
            size_hint_y: None
            height: dp(50)
            background_color: 0, 0, 0, 0
            color: rgba("#FFFFFF")  # White text
            canvas.before:
                Color:
                    rgba: rgba("#1E88E5")  # Blue button
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
            on_press: root.show_add_password_popup()

        Button:
            text: "Back to Menu"
            size_hint_y: None
            height: dp(50)
            background_color: 0, 0, 0, 0
            color: rgba("#FFFFFF")
            canvas.before:
                Color:
                    rgba: rgba("#D32F2F")  # Red for exit
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
            on_press: app.root.current = "menu"
