#:import rgba kivy.utils.get_color_from_hex

<PasswordDetailsScreen>:
    platform_label: platform_label
    username_label: username_label
    password_label: password_label

    canvas.before:
        Color:
            rgba: rgba("#E3F2FD")  # Light blue background
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(15)

        Label:
            text: "Password Details"
            font_size: 26
            color: rgba("#0D47A1")  # Dark blue title
            bold: True
            size_hint_y: None
            height: dp(60)

        Label:
            id: platform_label
            font_size: 20
            color: rgba("#1E88E5")  # Medium blue
            size_hint_y: None
            height: dp(50)

        Label:
            id: username_label
            font_size: 18
            color: rgba("#1565C0")  # Darker blue
            size_hint_y: None
            height: dp(50)

        Label:
            id: password_label
            font_size: 18
            color: rgba("#D32F2F")  # Red for sensitive info
            size_hint_y: None
            height: dp(50)

        Button:
            text: "Delete Password"
            size_hint_y: None
            height: dp(50)
            background_color: 0, 0, 0, 0
            color: rgba("#FFFFFF")  # White text
            canvas.before:
                Color:
                    rgba: rgba("#D32F2F")  # Red button for delete
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
            on_press: root.delete_password()

        Button:
            text: "Back to List"
            size_hint_y: None
            height: dp(50)
            background_color: 0, 0, 0, 0
            color: rgba("#FFFFFF")
            canvas.before:
                Color:
                    rgba: rgba("#1E88E5")  # Blue for navigation
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
            on_press: app.root.current = "password_list"
