#:import rgba kivy.utils.get_color_from_hex

<PasswordScreen>:
    master_password_input: master_password_input
    message_label: message_label

    canvas.before:
        Color:
            rgba: rgba("#E3F2FD")  # Light blue background
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        Label:
            text: "Enter Master Password"
            font_size: 26
            color: rgba("#0D47A1")  # Dark Blue Title
            bold: True
            size_hint_y: None
            height: dp(60)

        Widget:  # Spacer

        TextInput:
            id: master_password_input
            hint_text: "Enter Master Password"
            password: True
            size_hint_y: None
            height: dp(50)
            multiline: False
            background_color: 0, 0, 0, 0
            
            foreground_color: 0,0,0,1  # Black text color

        Button:
            text: "Access Passwords"
            size_hint_y: None
            height: dp(50)
            background_color: 0, 0, 0, 0
            color: rgba("#FFFFFF")  # White text
            canvas.before:
                Color:
                    rgba: rgba("#1E88E5")  # Blue button
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
            on_press: root.check_password()

        Label:
            id: message_label
            text: ""
            font_size: 18
            color: rgba("#D32F2F")  # Red error text
            size_hint_y: None
            height: dp(50)

        Button:
            text: "Back to Menu"
            size_hint_y: None
            height: dp(50)
            background_color: 0, 0, 0, 0
            color: rgba("#FFFFFF")
            canvas.before:
                Color:
                    rgba: rgba("#D32F2F")  # Red for exit
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
            on_press: app.root.current = "menu"
